    "version": "0.2.0",
    "configurations": [
        {
            "name": "chrome todo",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "timeout": 20000
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "firefox todo",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/"
        }
    ]
}